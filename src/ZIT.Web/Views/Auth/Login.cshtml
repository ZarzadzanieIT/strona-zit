@model LoginViewModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-xl-5 col-md-8">
            <form class="bg-white  rounded-5 shadow-5-strong p-5" method="post" asp-action="Login" asp-all-route-data="@(new Dictionary<string, string> { { "returnUrl", Context.Request.Query["returnUrl"] } })">
                <!-- Email input -->
                @foreach (var message in Model!.Messages)
                {
                    <span class="text-danger">
                        @message
                    </span>
                }
                <span class="text-danger" asp-validation-for="Login.Email"></span>
                <div class="form-outline mb-4">
                    <input type="email" id="form1Example1" class="form-control" asp-for="Login.Email" placeholder="@Model!.Login.Email"/>
                    <label class="form-label" for="form1Example1">Email address</label>
                </div>

                <!-- Password input -->
                <span class="text-danger" asp-validation-for="Login.Password"></span>
                <div class="form-outline mb-4">
                    <input type="password" id="form1Example2" class="form-control" asp-for="Login.Password"/>
                    <label class="form-label" for="form1Example2">Password</label>
                </div>

                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block">Sign in</button>
            </form>
        </div>
    </div>
</div>