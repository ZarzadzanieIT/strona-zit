@model ZIT.Core.DTOs.LoginDto

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<div>
    <form method="post" asp-action="Login">
        <div class="form-group">
            <label for="loginInput">Email</label>
            <input id="loginInput" asp-for="Email" placeholder="@Model.Email" />
        </div>
        
        <div class="form-group">
            <label for="passwordInput">Password</label>
            <input id="passwordInput" type="password" asp-for="Password"/>
        </div>

        <button id="loginBtn" class="btn btn-primary" type="submit">Sign in</button>

    </form>
</div>
</body>
</html>